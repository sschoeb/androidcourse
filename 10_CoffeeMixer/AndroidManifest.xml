<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.schoeb.coffeemixer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.schoeb.coffeemixer.CoffeeMixerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.schoeb.coffeemixer.PriceActivity"
            android:label="@string/title_activity_price"
            android:parentActivityName="ch.schoeb.coffeemixer.CoffeeMixerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.schoeb.coffeemixer.CoffeeMixerActivity" />
        </activity>
    </application>

</manifest>
